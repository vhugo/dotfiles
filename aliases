# Unix
alias ls="ls -la"
alias ll="ls -FG"
alias l="ls -l"

alias mkdir="mkdir -p"

alias e="$EDITOR"
alias v="$VISUAL"
alias ez='vim ~/.zshrc'
alias sz='source ~/.zshrc'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Nginx command
alias nginx_start='sudo launchctl load $HOME/Library/LaunchAgents/homebrew.mxcl.nginx.plist'
alias nginx_stop='sudo launchctl unload $HOME/Library/LaunchAgents/homebrew.mxcl.nginx.plist'
alias nginx_restart='nginx_stop && nginx_start;'

# Docker
alias dkcl='docker ps'
alias dkcls='docker ps -a'

## Rubocop
alias rcop='$HOME/.rvm/bin/rvm-auto-ruby -S rubocop -c "$HOME/.rubocop.yml"'
